@model PatientManagmentSubsystem.Models.Bed

@{
    ViewData["Title"] = "Delete Bed";
}

<h2 class="mt-4 mb-3 text-danger">🗑️ Confirm Bed Deletion</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this bed?</strong>
</div>

<div class="mb-3">
    <p><strong>Bed ID:</strong> @Model.BedId</p>
    <p><strong>Ward:</strong> @Model.Ward?.Name</p>
    <p><strong>Is Occupied:</strong> @(Model.IsOccupied ? "Yes" : "No")</p>
    <p><strong>Patient:</strong> @Model.Patient?.FirstName @Model.Patient?.LastName</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="BedId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
