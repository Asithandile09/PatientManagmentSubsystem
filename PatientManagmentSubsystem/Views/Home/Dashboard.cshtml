@{
    ViewData["Title"] = "Ward Management Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-container">

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="row align-items-center g-0">
            <div class="col-lg-7 hero-content">
                <h1 class="hero-title">
                    <i class="bi bi-hospital-fill"></i> Ward Management Dashboard
                </h1>
                <p class="hero-description">
                    Welcome back! Your centralized hub for efficient patient management and ward operations.
                    Monitor real-time statistics, manage patient records, and streamline hospital workflows.
                </p>
            </div>
            <div class="col-lg-5 hero-image-container">
                <img src="~/images/patientmangament.webp" alt="Healthcare Management" class="hero-image" />
            </div>
        </div>
    </section>

    <!-- Ward Statistics Section -->
    <section class="statistics-section">
        <div class="section-header-custom">
            <h2 class="section-title-custom">
                <i class="fas fa-chart-line"></i> Ward Statistics
            </h2>
            <p class="section-subtitle-custom">Real-time overview of hospital operations</p>
        </div>

        <div class="row g-4 mb-5">
            <!-- Active Patients Card -->
            <div class="col-lg-3 col-md-6">
                <div class="stat-card-modern stat-primary">
                    <div class="stat-icon-modern">
                        <i class="fas fa-user-injured"></i>
                    </div>
                    <div class="stat-content-modern">
                        <div class="stat-value-modern">@ViewBag.TotalPatients</div>
                        <div class="stat-label-modern">Active Patients</div>
                    </div>
                    <div class="stat-trend">
                        <i class="fas fa-arrow-up"></i> Real-time
                    </div>
                </div>
            </div>

            <!-- Available Beds Card -->
            <div class="col-lg-3 col-md-6">
                <div class="stat-card-modern stat-success">
                    <div class="stat-icon-modern">
                        <i class="fas fa-bed"></i>
                    </div>
                    <div class="stat-content-modern">
                        <div class="stat-value-modern">@ViewBag.AvailableBeds</div>
                        <div class="stat-label-modern">Available Beds</div>
                    </div>
                    <div class="stat-trend">
                        <i class="fas fa-check-circle"></i> Open
                    </div>
                </div>
            </div>

            <!-- Total Wards Card -->
            <div class="col-lg-3 col-md-6">
                <div class="stat-card-modern stat-info">
                    <div class="stat-icon-modern">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="stat-content-modern">
                        <div class="stat-value-modern">@ViewBag.TotalWards</div>
                        <div class="stat-label-modern">Total Wards</div>
                    </div>
                    <div class="stat-trend">
                        <i class="fas fa-hospital"></i> Active
                    </div>
                </div>
            </div>

            <!-- Today's Admissions Card -->
            <div class="col-lg-3 col-md-6">
                <div class="stat-card-modern stat-warning">
                    <div class="stat-icon-modern">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div class="stat-content-modern">
                        <div class="stat-value-modern">@ViewBag.TodayAdmissions</div>
                        <div class="stat-label-modern">Today's Admissions</div>
                    </div>
                    <div class="stat-trend">
                        <i class="fas fa-calendar-day"></i> Today
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Actions Section -->
    <section class="actions-section">
        <div class="section-header-custom">
            <h2 class="section-title-custom">
                <i class="fas fa-bolt"></i> Quick Actions
            </h2>
            <p class="section-subtitle-custom">Access frequently used functions</p>
        </div>

        <div class="row g-4">
            <!-- Admit Patient Card -->
            <div class="col-lg-3 col-md-6">
                <div class="action-card">
                    <div class="action-icon admit-icon">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <h5 class="action-title">Admit Patient</h5>
                    <p class="action-description">Register and admit new patients with complete medical documentation.</p>
                    <a href="@Url.Action("Create", "Patient")" class="action-link">
                        <span>Admit Now</span>
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>

            <!-- Patient Files Card -->
            <div class="col-lg-3 col-md-6">
                <div class="action-card">
                    <div class="action-icon records-icon">
                        <i class="fas fa-folder-open"></i>
                    </div>
                    <h5 class="action-title">Patient Files</h5>
                    <p class="action-description">View and manage comprehensive patient records and medical history.</p>
                    <a href="@Url.Action("Index", "Patient")" class="action-link">
                        <span>View Files</span>
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>

            <!-- Bed Management Card -->
            <div class="col-lg-3 col-md-6">
                <div class="action-card">
                    <div class="action-icon bed-icon">
                        <i class="fas fa-th-large"></i>
                    </div>
                    <h5 class="action-title">Bed Management</h5>
                    <p class="action-description">Monitor bed availability, occupancy status, and ward capacity.</p>
                    <a href="@Url.Action("Index", "Beds")" class="action-link">
                        <span>View Beds</span>
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>

            <!-- Patient Movements Card -->
            <div class="col-lg-3 col-md-6">
                <div class="action-card">
                    <div class="action-icon movement-icon">
                        <i class="fas fa-exchange-alt"></i>
                    </div>
                    <h5 class="action-title">Patient Movements</h5>
                    <p class="action-description">Track patient transfers, ward changes, and discharge records.</p>
                    <a href="@Url.Action("Index", "PatientMovements")" class="action-link">
                        <span>View Movements</span>
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>

</div>

@section Styles {
    <style>
        .dashboard-container {
            padding: 0;
            max-width: 100%;
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, rgba(139, 21, 56, 0.95) 0%, rgba(74, 144, 164, 0.9) 100%);
            padding: 3rem 2.5rem;
            margin: -2.5rem -2.5rem 3rem -2.5rem;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        }

        .hero-content {
            padding-right: 2rem;
        }

        .hero-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

            .hero-title i {
                margin-right: 0.5rem;
            }

        .hero-description {
            font-size: 1.1rem;
            color: rgba(255, 255, 255, 0.95);
            line-height: 1.7;
            margin-bottom: 0;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
        }

        .hero-image-container {
            display: flex;
            justify-content: center;
            align-items: center;
            padding-left: 2rem;
        }

        .hero-image {
            width: 100%;
            max-width: 450px;
            height: auto;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            border: 4px solid rgba(255, 255, 255, 0.2);
            transition: transform 0.4s ease;
        }

            .hero-image:hover {
                transform: scale(1.05);
            }

        /* Statistics Section */
        .statistics-section {
            padding: 0 0 2rem 0;
        }

        .section-header-custom {
            margin-bottom: 2rem;
            text-align: center;
        }

        .section-title-custom {
            font-size: 2rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

            .section-title-custom i {
                color: #8B1538;
            }

        .section-subtitle-custom {
            font-size: 1rem;
            color: #6c757d;
            margin-bottom: 0;
        }

        /* Modern Stat Cards */
        .stat-card-modern {
            background: #ffffff;
            border-radius: 16px;
            padding: 2rem;
            height: 100%;
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
            border: 2px solid transparent;
        }

            .stat-card-modern::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                transition: transform 0.3s ease;
            }

        .stat-primary::before {
            background: linear-gradient(90deg, #8B1538 0%, #B76E79 100%);
        }

        .stat-success::before {
            background: linear-gradient(90deg, #16a34a 0%, #4ade80 100%);
        }

        .stat-info::before {
            background: linear-gradient(90deg, #4A90A4 0%, #7BB3C4 100%);
        }

        .stat-warning::before {
            background: linear-gradient(90deg, #D4AF37 0%, #F4C430 100%);
        }

        .stat-card-modern:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
        }

        .stat-primary:hover {
            border-color: #8B1538;
        }

        .stat-success:hover {
            border-color: #16a34a;
        }

        .stat-info:hover {
            border-color: #4A90A4;
        }

        .stat-warning:hover {
            border-color: #D4AF37;
        }

        .stat-icon-modern {
            width: 70px;
            height: 70px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            margin-bottom: 1.5rem;
            transition: all 0.4s ease;
        }

        .stat-primary .stat-icon-modern {
            background: linear-gradient(135deg, #fff5f7 0%, #ffe8ed 100%);
            color: #8B1538;
        }

        .stat-success .stat-icon-modern {
            background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
            color: #16a34a;
        }

        .stat-info .stat-icon-modern {
            background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
            color: #4A90A4;
        }

        .stat-warning .stat-icon-modern {
            background: linear-gradient(135deg, #fefce8 0%, #fef9c3 100%);
            color: #D4AF37;
        }

        .stat-card-modern:hover .stat-icon-modern {
            transform: scale(1.1) rotate(5deg);
        }

        .stat-content-modern {
            margin-bottom: 1rem;
        }

        .stat-value-modern {
            font-size: 3rem;
            font-weight: 700;
            color: #2c3e50;
            line-height: 1;
            margin-bottom: 0.5rem;
        }

        .stat-label-modern {
            font-size: 1rem;
            color: #6c757d;
            font-weight: 500;
        }

        .stat-trend {
            display: flex;
            align-items: center;
            gap: 0.4rem;
            font-size: 0.85rem;
            color: #6c757d;
            font-weight: 500;
        }

            .stat-trend i {
                font-size: 0.75rem;
            }

        /* Actions Section */
        .actions-section {
            padding: 2rem 0;
        }

        /* Action Cards */
        .action-card {
            background: #ffffff;
            border: 2px solid #e9ecef;
            border-radius: 16px;
            padding: 2rem;
            height: 100%;
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
        }

            .action-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, #8B1538 0%, #4A90A4 100%);
                transform: scaleX(0);
                transition: transform 0.4s ease;
            }

            .action-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 40px rgba(139, 21, 56, 0.15);
                border-color: #8B1538;
            }

                .action-card:hover::before {
                    transform: scaleX(1);
                }

        .action-icon {
            width: 70px;
            height: 70px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            margin-bottom: 1.5rem;
            transition: all 0.4s ease;
        }

        .action-card:hover .action-icon {
            transform: scale(1.1) rotate(5deg);
        }

        .admit-icon {
            background: linear-gradient(135deg, #fff5f7 0%, #ffe8ed 100%);
            color: #8B1538;
        }

        .records-icon {
            background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
            color: #4A90A4;
        }

        .bed-icon {
            background: linear-gradient(135deg, #fefce8 0%, #fef9c3 100%);
            color: #D4AF37;
        }

        .movement-icon {
            background: linear-gradient(135deg, #fff0f5 0%, #ffe4ec 100%);
            color: #B76E79;
        }

        .action-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 1rem;
        }

        .action-description {
            font-size: 0.95rem;
            color: #6c757d;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .action-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: #8B1538;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

            .action-link:hover {
                gap: 0.8rem;
                color: #4A90A4;
            }

            .action-link i {
                transition: transform 0.3s ease;
            }

            .action-link:hover i {
                transform: translateX(4px);
            }

        /* Responsive Design */
        @@media (max-width: 992px) {
            .hero-content

        {
            padding-right: 0;
            margin-bottom: 2rem;
        }

        .hero-image-container {
            padding-left: 0;
            margin-top: 2rem;
        }

        .hero-title {
            font-size: 2rem;
        }

        .stat-value-modern {
            font-size: 2.5rem;
        }

        .section-title-custom {
            font-size: 1.7rem;
        }

        }

        @@media (max-width: 768px) {
            .hero-section

        {
            padding: 2rem 1.5rem;
        }

        .hero-title {
            font-size: 1.7rem;
        }

        .hero-description {
            font-size: 1rem;
        }

        .hero-image {
            max-width: 100%;
        }

        .stat-card-modern {
            padding: 1.5rem;
        }

        .stat-icon-modern {
            width: 60px;
            height: 60px;
            font-size: 1.8rem;
        }

        .stat-value-modern {
            font-size: 2.2rem;
        }

        .section-title-custom {
            font-size: 1.5rem;
        }

        .action-card {
            padding: 1.5rem;
        }

        }

        /* Smooth Entrance Animations */
        .stat-card-modern {
            animation: fadeInUp 0.6s ease forwards;
            opacity: 0;
        }

            .stat-card-modern:nth-child(1) {
                animation-delay: 0.1s;
            }

            .stat-card-modern:nth-child(2) {
                animation-delay: 0.2s;
            }

            .stat-card-modern:nth-child(3) {
                animation-delay: 0.3s;
            }

            .stat-card-modern:nth-child(4) {
                animation-delay: 0.4s;
            }

        .action-card {
            animation: fadeInUp 0.6s ease forwards;
            opacity: 0;
        }

            .action-card:nth-child(1) {
                animation-delay: 0.5s;
            }

            .action-card:nth-child(2) {
                animation-delay: 0.6s;
            }

            .action-card:nth-child(3) {
                animation-delay: 0.7s;
            }

            .action-card:nth-child(4) {
                animation-delay: 0.8s;
            }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const currentPage = window.location.pathname;
            const navLinks = document.querySelectorAll('.navbar-medical .nav-link');

            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPage) {
                    link.classList.add('active');
                }
            });
        });
    </script>
}