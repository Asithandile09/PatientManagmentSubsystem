@model PatientManagmentSubsystem.Models.PatientMovement

@{
    ViewData["Title"] = "Edit Movement";
}

<div class="container mt-4">
    <h2><i class="bi bi-pencil"></i> Edit Patient Movement</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="PatientMovementId" />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5>Movement Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="PatientId" class="form-label">Patient</label>
                            <select asp-for="PatientId" class="form-control" asp-items="@(ViewData["PatientId"] as SelectList)" disabled>
                                <option value="">-- Select Patient --</option>
                            </select>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                            <input type="hidden" asp-for="PatientId" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FromLocation" class="form-label">From Location</label>
                            <select asp-for="FromLocation" class="form-control" asp-items="ViewBag.Locations">
                                <option value="">-- Select Location --</option>
                            </select>
                            <span asp-validation-for="FromLocation" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ToLocation" class="form-label">To Location</label>
                            <select asp-for="ToLocation" class="form-control" asp-items="ViewBag.Locations">
                                <option value="">-- Select Location --</option>
                            </select>
                            <span asp-validation-for="ToLocation" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="MovedAt" class="form-label">Movement Date & Time</label>
                            <input asp-for="MovedAt" type="datetime-local" class="form-control" />
                            <span asp-validation-for="MovedAt" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5>Ward & Bed Assignment (Optional)</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="ToWardId" class="form-label">To Ward</label>
                            <select asp-for="ToWardId" class="form-control" asp-items="ViewBag.Wards" id="wardSelect">
                                <option value="">-- Select Ward --</option>
                            </select>
                            <span asp-validation-for="ToWardId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ToBedId" class="form-label">To Bed</label>
                            <select asp-for="ToBedId" class="form-control" asp-items="ViewBag.Beds" id="bedSelect">
                                <option value="">-- Select Bed --</option>
                            </select>
                            <span asp-validation-for="ToBedId" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <small><i class="bi bi-info-circle"></i> Ward and bed selection is only required if moving to a physical location within the hospital.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Update Movement
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#wardSelect').change(function() {
                var wardId = $(this).val();
                var bedSelect = $('#bedSelect');

                bedSelect.empty().append('<option value="">-- Select Bed --</option>');

                if (wardId) {
                    $.get('@Url.Action("GetBedsByWard", "PatientMovements")', { wardId: wardId })
                        .done(function(data) {
                            $.each(data, function(index, bed) {
                                bedSelect.append($('<option></option>').val(bed.bedId).text(bed.name));
                            });
                        });
                }
            });
        });
    </script>
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
}
