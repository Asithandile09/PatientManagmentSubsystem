@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = null; // Don't use the main layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ward Management System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/login-styles.css" />
</head>
<body>
    <div class="login-page-wrapper">
        <div class="login-card-container">
            <div class="login-card">
                <div class="login-header">
                    <div class="login-header-icon">
                        <i class="bi bi-hospital"></i>
                    </div>
                    <h1>Ward Management System</h1>
                    <p>Sign in to continue to your dashboard</p>
                </div>

                <div class="login-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control"
                                   autocomplete="username"
                                   aria-required="true"
                                   placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email Address</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control"
                                   autocomplete="current-password"
                                   aria-required="true"
                                   placeholder="Password"
                                   type="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" type="checkbox" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                Remember me on this device
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-login-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                        </button>

                        <div class="login-divider">
                            <span>OR</span>
                        </div>

                        <div class="register-link-section">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </div>

                        <div class="register-link-section mt-3">
                            Don't have an account? <a id="register" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create one now</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>